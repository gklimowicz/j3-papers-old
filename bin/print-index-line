#!/usr/bin/env bash

trap "exit 1" HUP INT QUIT TERM

set -e -u -o pipefail

CMD="$(basename $0)"
function usage {
    echo "Usage: $CMD [-hnv] ..." 1>&2
    echo "-h        Print this help message." 1>&2
    echo "-n        Dry run. Don't execute commands." 1>&2
    echo "-v        Verbose. Print extra information if appropriate." 1>&2
}

DRY_RUN=
VFLAG=
while getopts hnv\? OPTCHAR; do
    case $OPTCHAR in
        h)  usage; exit 0;;
        n)  DRY_RUN=1;;
        v)  VFLAG=1;;
    esac
done

shift $(($OPTIND - 1))
#echo "$CMD: Remaining arguments are: $*"

case $# in
    0)  usage; exit 1;;
    *)  ;;
esac

for F in "$@"; do
    if [[ ! -f "$F" ]]; then
        echo "$CMD: '$F' is not a regular file" 1>&2
        continue
    fi

    BN="$(basename "$F")"
    CHK="$(md5 -q "$F")"
    case "$F" in
        *.f|*.f90|*.htm*|*.ps|*.rtf|*.t|*.tex|*.troff|*.txt)
            LC="$(wc -l <"$F" | tr -d ' ')";;
        *)
            LC="n/a";;
    esac

    echo "$BN	$LC	$CHK	$F"
done
